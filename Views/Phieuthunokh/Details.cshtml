@model IEnumerable<ElectronicsStore.Models.Noidungthunokh>

@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
    Noidungthunokh noidungkh = ViewData["Noidungkh"] as Noidungthunokh;
    Noidungthunoddh noidungddh = ViewData["Noidungddh"] as Noidungthunoddh;
    int Sotienconno = (int)ViewData["Sotienconno"]; // bằng 0 là đã trả đủ
}

<div class="d-flex justify-content-between mb-2">
    <div class="d-flex justify-content-between  flex-row-reverse">
        <form asp-controller="Phieuthunokh" asp-action="Index">
            <button type="submit" class="btn btn-light ">
                Quay lại
            </button>
        </form>

    </div>
    @if (Sotienconno == 0)
    {

        <button disabled type="button" class="btn btn-success mr-2" data-toggle="modal" data-target="#addModal">
            Thêm mới phiếu thu
        </button>
    }
    else
    {
        <button  type="button" class="btn btn-success mr-2" data-toggle="modal" data-target="#addModal">
            Thêm mới phiếu thu
        </button>
    }

</div>
<div class="table-responsive">

    <table class="table table-striped table-bordered" id="productTable">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Ngày thu</th>
                <th class="text-center">Số tiền</th>
                <th class="text-center">Ghi chú</th>

            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;


            }

            @if (Model != null)
            {
                @foreach (var item in Model)
                {

                    <tr>
                        <td class="d-flex justify-content-center">@count</td>
                        @{
                            DateTime Ngaythuno = (DateTime)item.Ngaythuno;

                        }
                        <td class="text-center">@Ngaythuno.ToString("dd/MM/yyyy ", System.Globalization.CultureInfo.InvariantCulture)</td>
                        @{
                            var Sotien = String.Format("{0:0,0}", (item.Sotien));

                        }
                        <td class="text-right">@Sotien đ</td>
                        <td>@item.Ghichu</td>

                        @{ count++; }
                    </tr>

                }



            }
            else
            {
                @foreach (var item in ViewData["noidungthunoddhkh"] as List<Noidungthunoddh>)
                {

                    <tr>
                        <td class="d-flex justify-content-center">@count</td>
                        @{
                            DateTime Ngaythuno = (DateTime)item.Ngaythuno;

                        }
                        <td class="text-right">@Ngaythuno.ToString("dd/MM/yyyy ", System.Globalization.CultureInfo.InvariantCulture)</td>
                        @{
                            var Sotien = String.Format("{0:0,0}", (item.Sotien));

                        }
                        <td class="text-right">@Sotien đ</td>
                        <td>@item.Ghichu</td>
                        @{ count++; }
                    </tr>

                }
            }




        </tbody>
    </table>
</div>

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel"
     aria-hidden="true">
    <div class="modal-dialog w-90" role="document" style="display: flex;
        align-items: center;
        justify-content: center;">
        <div class="modal-content ">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Thêm mới nhân viên</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @if (Model != null)
            {
                <form id="formAdd" asp-controller="Phieuthunokh" asp-action="Themnoidungphieuthunokh" method="post" enctype="multipart/form-data">

                    <div class="modal-body">
                        <input type="hidden" value="@noidungkh.Idptnkh" name="Idptnkh" />
                        <input type="hidden" value="@noidungkh.Idpxk" name="Idpxk" />
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2 col-sm-12">
                                        Số tiền
                                    </div>
                                    <div class="col-md-10 col-sm-12">
                                        <input id="SophieuA" name="Sotien" maxlength="255" type="text"
                                               class="form-control">

                                    </div>
                                </div>
                            </div>



                            <div class="col-md-12 col-sm-12 mt-2">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2 col-sm-12">
                                        Ghi chú
                                    </div>
                                    <div class="col-md-10 col-sm-12">
                                        <textarea id="GhichuA" name="Ghichu" maxlength="4000"
                                                  type="text" class="form-control"></textarea>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" id="addButton" class="btn btn-primary">Lưu</button>
                    </div>

                </form>
            }
            else
            {
                <form id="formAdd" asp-controller="Phieuthunokh" asp-action="Themnoidungphieuthunoddh" method="post" enctype="multipart/form-data">

                    <div class="modal-body">
                        <input type="hidden" value="@noidungddh.Idptnkh" name="Idptnkh" />
                        <input type="hidden" value="@noidungddh.Iddh" name="Iddh" />
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2 col-sm-12">
                                        Số tiền
                                    </div>
                                    <div class="col-md-10 col-sm-12">
                                        <input id="SophieuA" name="Sotien" maxlength="255" type="text"
                                               class="form-control">

                                    </div>
                                </div>
                            </div>



                            <div class="col-md-12 col-sm-12 mt-2">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2 col-sm-12">
                                        Ghi chú
                                    </div>
                                    <div class="col-md-10 col-sm-12">
                                        <textarea id="GhichuA" name="Ghichu" maxlength="4000"
                                                  type="text" class="form-control"></textarea>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" id="addButton" class="btn btn-primary">Lưu</button>
                    </div>

                </form>
            }


        </div>
    </div>
</div>