@model IEnumerable<ElectronicsStore.Models.Phieuxuatkho>

@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}

<div class="d-flex justify-content-between mb-2">
    <div class="d-flex justify-content-between  flex-row-reverse">
        <form asp-controller="Phieuxuatkho" asp-action="Index">
            <button type="submit" class="btn btn-light ">
                Quay lại
            </button>
        </form>

    </div>

</div>
<table class="table table-striped table-bordered" id="productTable">
    <thead>
        <tr>
            <th class="text-center">STT</th>
            <th>Số phiếu</th>
            <th>Khách hàng</th>

            <th>Nhân viên lập</th>
            <th>Ngày lập</th>
            <th>Số hóa đơn</th>
            <th>Ngày hóa đơn</th>
            <th>Ghi chú</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (var item in Model)
        {

        <tr>
            <td class="d-flex justify-content-center">@count</td>
            <td>@item.Sophieu</td>
            <td>@item.IdkhNavigation.Tenkh</td>

            <td>@item.IdnvNavigation.Tennv</td>
            @{
                DateTime Ngaylap = (DateTime)item.Ngaylap;

            }
            <td>@Ngaylap.ToString("dd/MM/yyyy HH:mm:ss", System.Globalization.CultureInfo.InvariantCulture)</td>
            <td>@item.Sohd</td>

            @if (item.Ngayhd != null)
            {
                DateTime Ngayhd = (DateTime)item.Ngayhd;
                <td class="d-none">@Ngayhd.ToString("dd/MM/yyyy HH:mm:ss", System.Globalization.CultureInfo.InvariantCulture)</td>
            }
            else
            {
                <td class="d-none"></td>
            }
            <td>@item.Ghichu</td>

            <td class="d-none">@item.Idpxk</td>


            <td>
                <form asp-controller="Phieuxuatkho" asp-action="ReStore">
                    <input name="id" value="@item.Idpxk" class="d-none" type="text">

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-unlock text-white"></i>
                    </button>
                </form>

            </td>
            @{ count++; }
        </tr>


        }


    </tbody>
</table>

