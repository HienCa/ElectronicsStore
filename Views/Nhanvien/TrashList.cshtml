@model IEnumerable<ElectronicsStore.Models.Nhanvien>

@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}

<div class="d-flex justify-content-between mb-2">
    <div class="d-flex justify-content-between  flex-row-reverse">
            <form asp-controller="Nhanvien" asp-action="Index">
                <button type="submit" class="btn btn-light ">
                    Quay lại
                </button>
            </form>
           
    </div>

    </div>
    <table class="table table-striped table-bordered" id="productTable">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th>Ảnh</th>
                <th>Mã</th>
                <th>Họ tên</th>
                <th>CCCD</th>
                <th>Ngày sinh</th>
                <th>Giới tính</th>
                <th>Địa chỉ</th>
                <th class="d-none"></th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
            }
            @foreach (var item in Model)
            {

            <tr>
                <td class="d-flex justify-content-center">@count</td>
                <td><img style="height: 200px; width: 200px" src=".././Images/@item.Hinhanh" /></td>
                <td>@item.Manv</td>
                <td>@item.Tennv</td>
                <td>@item.Cccd</td>
                <td>@item.Ngaysinh</td>
                <td>@item.Gioitinh</td>
                <td>@item.Diachi</td>
                <td class=d-none>@item.Idnv</td>


                <td>
                    <form asp-controller="Nhanvien" asp-action="ReStore">
                        <input name="id" value="@item.Idnv" class="d-none" type="text">

                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-unlock text-white"></i>
                        </button>
                    </form>

                </td>
                @{ count++; }
            </tr>


            }


        </tbody>
    </table>

