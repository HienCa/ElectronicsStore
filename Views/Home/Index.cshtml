@using ElectronicsStore.ViewModel;
@using ElectronicsStore.Models;
@{
    Layout = "_Home";

}
<div class="container" style="margin-top:70px;">
    <div class="category p-3" style="background-color: #fff;border-radius: 5px;">
        <div class="row">
            @foreach (var item in TempData["Nhomhh"] as List<Nhomhh>)
            {
                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="d-flex flex-column align-items-center">
                        <div class="">
                            <img src="./h.jpg" alt="Loại linh kiện"
                                 style="width:100px;height: 100px;border-radius: 50%;">
                        </div>
                        <div>@item.Tennhh</div>
                    </div>

                </div>
            }



        </div>

    </div>
    <div class="mt-3">
        <div class="p-3" style="background-color: #fff;border-radius: 5px;">
            <h3 class="text-danger"><i class="fas fa-fire "></i> KHUYẾN MÃI HOT</h3>
            <div class="row">

                @foreach (var item in TempData["Hanghoa"] as List<HanghoaViewModel>)
                {

                    @if (item.Giakm != null)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-2">
                            <div class="card product" style="border:none">
                                <a href="/Home/Details/@item.Idhh" style="text-decoration:none;color:black">
                                    <img src="~/Images/@item.ExistingImage" class="card-img-top" style="width: 100%; height: 300px;"
                                         alt="ảnh linh kiện">
                                </a>
                                <div class="card-body">
                                    <a href="/Home/Details/@item.Idhh" style="text-decoration:none;color:black">
                                        <p class="card-title" style="width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">@item.Tenvl</p>
                                        @if (item.Giakm != null)
                                        {
                                            float? giakm = item.Giakm;
                                            string giakms = giakm.HasValue ? giakm.Value.ToString("#,###.##") : "";


                                            string giabans = (item.Giaban).ToString("#,###.##");

                                            <p class="card-text text-danger ">@giakms đ</p>
                                            <p class="card-text text-dark  "
                                               style="text-decoration: line-through;opacity: 0.7;">@giabans đ</p>
                                        }

                                    </a>

                                    <button href="#" class="btn btn-danger mt-2 w-100 text-white">MUA NGAY</button>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
    <div class="mt-3">
        <div class="p-3" style="background-color: #fff;border-radius: 5px;">
            <div class="row">

                @foreach (var item in TempData["Hanghoa"] as List<HanghoaViewModel>)
                {

                    @if (item.Giakm == null)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-2">
                            <div class="card product" style="border:none">
                                <a href="/Home/Details/@item.Idhh" style="text-decoration: none; color: black; height: 300px;">
                                    <img src="~/Images/@item.ExistingImage" class="card-img-top" style="width: 100%; height: 300px;"
                                         alt="ảnh linh kiện">
                                </a>
                                <div class="card-body">
                                    <a href="/Home/Details/@item.Idhh" style="text-decoration:none;color:black">
                                        <p class="card-title" style="width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">@item.Tenvl</p>
                                        @{
                                            string giabans = (item.Giaban).ToString("#,###.##");
                                        }
                                        <p class="card-text text-danger ">@giabans đ</p>

                                    </a>

                                    <button href="#" class="btn btn-danger mt-2 w-100 text-white">MUA NGAY</button>
                                </div>
                            </div>
                        </div>
                    }


                }


            </div>
        </div>
    </div>
</div>