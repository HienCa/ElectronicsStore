@model IEnumerable<ElectronicsStore.Models.Khachhang>

@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}

<div class="d-flex justify-content-between mb-2">
    <div class="d-flex justify-content-between  flex-row-reverse">
        <form asp-controller="Khachhang" asp-action="Index">
            <button type="submit" class="btn btn-light ">
                Quay lại
            </button>
        </form>

    </div>

</div>
<table class="table table-striped table-bordered" id="productTable">
    <thead>
        <tr>
            <th class="text-center">STT</th>
            <th>Ảnh</th>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>CCCD</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th class="d-none"></th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (var item in Model)
        {

        <tr>
            <td class="d-flex justify-content-center">@count</td>
            <td><img style="height:200px;width:200px" src=".././Images/@item.Hinhanh" alt="Chưa có ảnh"/></td>
            <td>@item.Makh</td>
            <td>@item.Tenkh</td>
            <td>@item.Cccd</td>
            <td>@item.Ngaysinh</td>
            <td>@item.Gioitinh</td>
            <td>@item.Diachi</td>
            <td class=d-none>@item.Idkh</td>


            <td>
                <form asp-controller="Khachhang" asp-action="ReStore">
                    <input name="id" value="@item.Idkh" class="d-none" type="text">

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-unlock text-white"></i>
                    </button>
                </form>

            </td>
            @{ count++; }
        </tr>


        }


    </tbody>
</table>

