@using ElectronicsStore.ViewModel;

@{
    Layout = "_Admin";
    ElectronicsStoreContext _context = new ElectronicsStoreContext();
    List<Hanghoa> hanghoa = _context.Hanghoa.Where(V => V.Active == 1).ToList();
}
<div class="x_content">
